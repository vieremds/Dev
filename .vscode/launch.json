    "version": "0.2.0",
    "configurations": [
    
        {
            "name": "Flask",
            "type": "python",
            "request": "launch",
            "stopOnEntry": false,
            "program": "${workspaceRoot}/mooney/mooney.py",

            "envFile": "${workspaceFolder}/mooney/venv/bin/activate",

            "env": {
                "FLASK_APP": "${workspaceFolder}/mooney/mooney.py",
                "FLASK_ENV": "development",
                "FLASK_DEBUG": "1"
            },
            "args": [
                "run"
            ],
            "jinja": true,
            "justMyCode": true
        }
    ]
}